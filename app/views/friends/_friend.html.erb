<div id="<%= dom_id friend %>">
<table class="table table-light">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">twitter</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">#</th>
      <td><%= friend.first_name %></td>
