<% if user_signed_in? %>
  <h1>Friends list:</h1>

  <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th>User Id</th>
        </tr>
      </thead>
  <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <tr>
            <td>
  			<%= link_to friend.first_name, friend %>


            </td>
            
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>
            
            
            
            
            <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= button_to 'Delete', friend, method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
            
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>


  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary btn-sm" %>
<% else %>
  hello world!

  This is my first rails webpage

<% end %>